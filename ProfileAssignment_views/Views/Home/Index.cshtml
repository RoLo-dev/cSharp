<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello World</title>
</head>
<body>
    <h1>Tranquilo</h1>
    @{
        var StringList = new List<string>
        {
            "Apple",
            "Burritos",
            "Clams Casino",
            "Donuts",
            "Churros"
        };
        foreach(var word in StringList)
        {
            <div>
                <p>@word</p>
                @if(word.Length < 4)
                {
                    <p>@word is a short word</p>
                }
            </div>
        }
    }
</body>
</html>