@model List<Dish>

<header>
    <div class="wrapper flex">
        <div class="title">
            <h1><a href="/">Chefs</a> | Dishes</h1>
        </div>
        <div class="link">
            <a href="dishes/new">Add a Dish</a>
        </div>
    </div>
</header>

<div class="wrapper">
    <h3>Check out all the tasty dishes</h3>
    
    <table>
        <tr>
            <th class="padding">Name</th>
            <th class="padding">Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
        @foreach(var dish in Model)
        {
        <tr>
            <td>@dish.DishName</td>
            <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
            <td>@dish.Tastiness</td>
            <td>@dish.Calories</td>
        </tr>
        }
    </table>
</div>