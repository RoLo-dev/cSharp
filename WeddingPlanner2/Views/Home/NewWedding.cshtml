@model Wedding

<header>
    <div class="wrapper flex">
        <div class="title">
            <h1 class="unique-font">Plan Your Wedding</h1>
        </div>
        <div class="link">
            <a asp-action="Dashboard" asp-controller="Home">Dashboard</a>
            <a asp-action="Logout" asp-controller="Home">Logout</a>
        </div>
    </div>
</header>

<div class="wrapper">
    <form asp-action="CreateWedding" asp-controller="Home" class="flex-col" method="POST">
        <span asp-validation-for="WedderOne"></span>
        <label asp-for="WedderOne"></label>
        <input type="text" asp-for="WedderOne">

        <span asp-validation-for="WedderTwo"></span>
        <label asp-for="WedderTwo"></label>
        <input type="text" asp-for="WedderTwo">

        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input asp-for="Date">

        <span asp-validation-for="Address"></span>
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address">

        <input type="submit" class="btn" value="Create">
    </form>
</div>