@model Wedding

<header>
    <div class="wrapper flex">
        <div class="title">
            <h1 class="unique-font">@Model.WedderOne @Model.WedderTwo</h1>
        </div>
        <div class="link">
            <a asp-action="Dashboard" asp-controller="Home">Dashboard</a>
            <a asp-action="Logout" asp-controller="Home">Logout</a>
        </div>
    </div>
</header>

<div class="wrapper flex-split">
    <div class="col">
        <h3>Date: @Model.Date.ToString("MM dd, yyyy")</h3>

        <h3>Guests:</h3>
        <ul>
        @foreach(RSVP RSVP in @Model.RSVPs)
        {
            <li>@RSVP.Guest.FirstName @RSVP.Guest.LastName</li>
        }
        </ul>
    </div>
    <div class="col">
        <h3>Address: @Model.Address</h3>

        <div id="googleMap" style="width:100%;height:400px"></div>
    </div>

</div>


